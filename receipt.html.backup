        // Load receipt data
        document.addEventListener('DOMContentLoaded', () => {
            // Get receipt data from URL parameters or localStorage
            const urlParams = new URLSearchParams(window.location.search);
            const receiptData = {
                number: urlParams.get('receipt') || 'RCP-' + Math.random().toString(36).substr(2, 9).toUpperCase(),
                date: new Date().toLocaleDateString(),
                time: new Date().toLocaleTimeString(),
                method: 'Credit Card',
                amount: '$150.00',
                service: 'Lawn Maintenance'
            };

            // Populate receipt data
            document.getElementById('receipt-number').textContent = receiptData.number;
            document.getElementById('receipt-date').textContent = receiptData.date;
            document.getElementById('receipt-time').textContent = receiptData.time;
            document.getElementById('payment-method').textContent = receiptData.method;
            document.getElementById('amount-paid').textContent = receiptData.amount;
            document.getElementById('service-type').textContent = receiptData.service;
        });
