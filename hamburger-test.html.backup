<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hamburger Menu Test</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }
        .test-container {
            max-width: 800px;
            margin: 0 auto;
        }
        .test-button {
            background: #2e7d32;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin: 10px 5px;
        }
        .test-results {
            background: #f5f5f5;
            padding: 15px;
            border-radius: 4px;
            margin: 20px 0;
            white-space: pre-wrap;
        }
        iframe {
            width: 100%;
            height: 600px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <div class="test-container">
        <h1>Hamburger Menu Test</h1>
        
        <div>
            <button class="test-button" onclick="testDesktop()">Test Desktop View</button>
            <button class="test-button" onclick="testMobile()">Test Mobile View</button>
            <button class="test-button" onclick="runTests()">Run All Tests</button>
        </div>
        
        <div class="test-results" id="results">Test results will appear here...</div>
        
        <h2>Live Preview</h2>
        <iframe id="preview" src="index.html"></iframe>
    </div>

    <script>
        const results = document.getElementById('results');
        const preview = document.getElementById('preview');
        
        function log(message) {
            results.textContent += message + '\n';
        }
        
        function clearLog() {
            results.textContent = '';
        }
        
        function testDesktop() {
            clearLog();
            log('Testing Desktop View (768px+)...');
            preview.style.width = '800px';
            preview.style.height = '600px';
            log('âœ… Desktop view loaded');
        }
        
        function testMobile() {
            clearLog();
            log('Testing Mobile View (<768px)...');
            preview.style.width = '375px';
            preview.style.height = '600px';
            log('âœ… Mobile view loaded');
        }
        
        function runTests() {
            clearLog();
            log('Running comprehensive hamburger menu tests...\n');
            
            // Test desktop first
            log('1. Testing Desktop View:');
            testDesktop();
            
            setTimeout(() => {
                log('\n2. Testing Mobile View:');
                testMobile();
                
                setTimeout(() => {
                    log('\n3. Testing Responsive Behavior:');
                    log('âœ… Hamburger menu should be hidden on desktop');
                    log('âœ… Hamburger menu should be visible on mobile');
                    log('âœ… Menu should toggle when hamburger is clicked');
                    log('âœ… Menu should close when clicking outside');
                    log('âœ… Menu should close when pressing Escape key');
                    log('âœ… Menu should close when clicking a link');
                    
                    log('\nðŸŽ‰ All tests completed! Check the preview above.');
                }, 1000);
            }, 1000);
        }
        
        // Auto-run tests on load
        window.addEventListener('load', () => {
            setTimeout(runTests, 1000);
        });
    </script>
</body>
</html> 